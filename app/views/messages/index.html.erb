<p id="notice"><%= notice %></p>

<h1>MessageBoard</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.title %></td>
        <td><%= message.description %></td>
        <td><%= link_to 'Show', message_path(message)  %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= button_to 'Delete', message_path(message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path %>
